{
  "name": "@ogea12/design-system",
  "description": "Librairie de composants efficace et homogÃ¨ne pour React",
  "version": "0.1.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs"
    },
    "./field": {
      "types": "./build/atoms/field/index.d.ts",
      "import": "./build/atoms/field/index.js",
      "require": "./build/atoms/field/index.cjs"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint:fix",
    "build": "tsup",
    "postbuild": "del-cli build/**/*.d.cts",
    "prepublishOnly": "npm run build",
    "release": "npx release-it",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "homepage": "https://github.com/ogea12/design-system#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ogea12/design-system.git"
  },
  "devDependencies": {
    "@ogea12/eslint-config": "^1.3.1",
    "@ogea12/prettier-config": "^1.0.3",
    "@ogea12/tsconfig": "^1.0.3",
    "@storybook/addon-essentials": "^8.6.11",
    "@storybook/blocks": "^8.6.11",
    "@storybook/react": "^8.6.11",
    "@storybook/react-vite": "^8.6.11",
    "@swc/core": "^1.11.13",
    "@types/node": "^22.13.14",
    "@types/react": "^18.3.1",
    "@unocss/reset": "^66.0.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "storybook": "^8.6.11",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "unocss": "^66.0.0",
    "vite": "^6.2.3"
  },
  "dependencies": {
    "@ark-ui/react": "^5.4.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "author": "OGEA 12",
  "license": "MIT",
  "keywords": [
    "ogea12",
    "design-system"
  ],
  "prettier": "@ogea12/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
